{% extends 'AppBundle::layout.html.twig' %}

{% block content %}
    <div class="container">
        <div id="timeline" class="col-lg-7 box-default timeline pull-left">
            <h1 class="box-header">Timeline</h1>

            {# List of publications #}
            <div class="box-content">
                {% include '@App/User/common/_publications.html.twig' %}
            </div>

        </div>

        <div id="user-card" class="col-lg-4 pull-left box-default">
            {# Avatar #}
            {% include '@App/User/common/_avatar.html.twig' with {
                'user': app.user
            } only %}

            <div class="first-name-last-name">
                <a href="{{ path('user_profile', {'user': app.user.id}) }}">{{ app.user.firstName }} {{ app.user.lastName }}</a>
                <div class="clearfix"></div>
                <span class="nickname">
                    {{ app.user.nick }}
                </span>
            </div>

            {# Stats #}
            {% include '@App/User/common/_stats.html.twig' with {
                'user': app.user
            } %}

        </div>

        <div id="new-publication" class="col-lg-4 pull-left box-default">
            <h1 class="box-header">Crear publicaci√≥n</h1>

            {{ form_start(form) }}
            {{ form_errors(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-default">Enviar</button>
            {{ form_end(form) }}

        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset('assets/js/custom/home.js') }}" type="text/javascript"></script>
{% endblock %}