{% extends '@App/layout.html.twig' %}

{% block content %}
    <div class="container">
        <div class="col-lg-12 box-default">
            <h1 class="box-header">Mensajer√≠a privada</h1>

            <div class="col-lg-6 box-message">
                <h4>Enviar nuevo mensaje privado</h4>
                {{ form_start(form) }}
                {{ form_errors(form) }}
                {{ form_widget(form) }}
                <button type="submit" class="btn btn-default">Enviar</button>
                {{ form_end(form) }}

                <br>
                <a href="{{ path('message_sended') }}" class="btn btn-warning">Ver mensajes enviados</a>
            </div>

            <div class="col-lg-6">
                <h4>Mensajes recibidos</h4>
                <hr>

                {# List of messages #}
                <div class="box-content box-messages">
                    {% include '@App/User/common/_messages.html.twig' %}
                </div>

            </div>

            <div class="clearfix"></div>

        </div>
    </div>
{% endblock %}