{% extends '@App/layout.html.twig' %}

{% block content %}
    <div class="container">
        <div class="col-lg-12 box-default box-notifications">
            <h1 class="box-header">Notificaciones</h1>

            <div class="box-content">
                {% for notification in pagination %}
                    <div class="col-lg-12 notification-item">
                        <div class="alert alert-default">
                            <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>

                            {% set user_notif = notification.typeId | get_user %}

                            {% if notification.type == 'follow' %}
                                <a href="{{ path('user_profile', {'user': notification.typeId}) }}">
                                    {{ user_notif.firstName }} {{ user_notif.lastName }}
                                </a> te está siguiendo
                            {% else %}
                                Al usuario
                                <a href="{{ path('user_profile', {'user': notification.typeId}) }}">
                                    {{ user_notif.firstName }} {{ user_notif.lastName }}
                                </a> gusta una publicación
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
{% endblock %}