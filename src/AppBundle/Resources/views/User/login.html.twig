{% extends 'AppBundle::layout.html.twig' %}

{% block content %}
    <div class="box-form col-lg-4">
        <h2>Identifícate</h2>
        <hr>

        <form action="{{ path('login_check') }}" method="POST">
            <label for="_username">Email</label>
            <input type="email" id="_username" name="_username" value="{{ last_username }}" class="form-control">
        
            <label for="_password">Contraseña</label>
            <input type="password" id="_password" name="_password" class="form-control">

            <button type="submit" class="btn btn-default">Enviar</button>
            <input type="hidden" name="_target_path" value="/">
            
        </form>
    </div>
{% endblock %}