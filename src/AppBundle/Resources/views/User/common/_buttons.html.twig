{% if app.user.id != user.id %}
    <div class="{% if not profile %}pull-right{% endif %} buttons-following">
        {% if profile %}
            <button class="btn btn-sm btn-disable">
                {% if user | following(app.user) %}
                    Te sigue
                {% else %}
                    No te sigue
                {% endif %}
            </button>
        {% endif %}

        <button type="button" class="btn btn-sm btn-success btn-follow
            {% if app.user|following(user) %}
                hidden
            {% endif %}
            " data-followed="{{ user.id }}">
            <span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>
            &nbsp;
            Seguir
        </button>

        <button type="button" class="btn btn-sm btn-danger btn-unfollow
            {% if not app.user|following(user) %}
                hidden
            {% endif %}
            " data-followed="{{ user.id }}">
            <span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
            &nbsp;
            Dejar de seguir
        </button>
    </div>
{% endif %}